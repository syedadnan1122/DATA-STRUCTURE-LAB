#include <iostream>
using namespace std;

int GenerateC(int P)
	{
		int Factorial = 1;
		for(int i=P; i>0; i--)
		{
			Factorial *= P;
			P--; 
		}
		return Factorial;
	}
int(*ptrC)(int n) = &GenerateC;

int main() {
	
	int a;
	cout << "Enter Number for to find Factorial: ";
	cin >> a;
	int X = ptrC(a);
	cout << "The Factorial is: " << X;
	
	return 0;
}
